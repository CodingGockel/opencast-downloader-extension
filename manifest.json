{
  "manifest_version": 3,
  "name": "Moodle Video Downloader",
  "version": "4.0",
  "description": "Sobald du auf Play drückst erkennt er den Videostream und du kannst auf Download drücken",
  "permissions": [
    "sidePanel",
    "downloads",
    "webRequest",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Open Downloader"
  },
  "icons": {
    "16": "images/icon16.png"
  }
}
